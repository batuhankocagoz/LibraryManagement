@using Library.WebUI.Dtos.UserDto
@model RegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="title">Kayıt Ol</h1>

<div class="d-flex justify-content-center">
    <form asp-controller="Account" asp-action="Register" method="post" style="width: 100%; max-width: 400px;">
        <div class="form-group mb-3">
            <label asp-for="Email">E-posta Adresi</label>
            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="E-posta adresinizi girin">
        </div>
        <div class="form-group mb-3">
            <label asp-for="UserName">Kullanıcı Adı</label>
            <input type="text" class="form-control" asp-for="UserName" aria-describedby="emailHelp" placeholder="Kullanıcı adınızı girin">
        </div>
        <div class="form-group mb-3">
            <label asp-for="FullName">Tam Ad</label>
            <input type="text" class="form-control" asp-for="FullName" aria-describedby="emailHelp" placeholder="Tam adınızı girin">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password">Şifre</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Şifrenizi girin">
        </div>
        <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
    </form>
</div>

<style>
    .title {
        font-size: 32px;
        color: #2c3e50;
        margin-top: 30px;
        text-align: center;
        font-weight: 600;
        position: relative;
        padding-bottom: 25px;
    }
</style>